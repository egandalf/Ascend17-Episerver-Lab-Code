@using System.Web.Mvc.Html
@using Brightfind.EktronToEpiserverLab
@model Brightfind.EktronToEpiserverLab.Models.ViewModels.IPageViewModel<Brightfind.EktronToEpiserverLab.Models.Pages.SpockPageBase>
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(string.IsNullOrWhiteSpace(Model.CurrentPage.MetaTitle ?? string.Empty) ? Model.CurrentPage.Name : Model.CurrentPage.MetaTitle) @Global.RenderingValues.TitleSuffix</title>
    <meta name="keywords" content="@(Model.CurrentPage.MetaKeywords != null ? string.Join(",", Model.CurrentPage.MetaKeywords) : string.Empty)" />
    <meta name="description" content="@Model.CurrentPage.MetaDescription"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <link href="/Static/css/custom.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    @if (!Model.Layout.HideHeader)
    {
        Html.RenderPartial("Partials\\_Navigation", Model);
    }
    <div class="container">
        @RenderBody()
        @if (!Model.Layout.HideFooter)
        {
            Html.RenderPartial("Partials\\_Footer", Model);
        }
    </div>
</body>
</html>
